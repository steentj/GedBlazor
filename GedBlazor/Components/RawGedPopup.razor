@using GedBlazor.Models
@inherits ComponentBase

@code {
    [Parameter]
    public Individual? Individual { get; set; }
}

<div class="container-fluid p-3" style="max-height:70vh; overflow:auto;">
    <h5 class="mb-3">@Individual?.FullName</h5>
    @if (Individual == null || Individual.RawPersonalData.Count == 0)
    {
        <div class="text-muted">No raw personal GED data.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-sm table-striped">
                <thead>
                    <tr>
                        <th style="width: 30%">Tag</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var kv in Individual.RawPersonalData.OrderBy(k => k.Key, StringComparer.OrdinalIgnoreCase))
                {
                    <tr>
                        <td class="align-top fw-semibold">@kv.Key</td>
                        <td>
                            @foreach (var v in kv.Value)
                            {
                                <div class="text-wrap">@v</div>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>

