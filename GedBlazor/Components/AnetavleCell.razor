@using GedBlazor.Models

<div class="anetavle-cell @(HighlightRole)" data-anenummer="@Anenummer">
    @if (Individual != null)
    {
        @if (!ShowMinimal)
        {
            <div class="info">
                <div class="anenummer" aria-label="Anenummer">@Anenummer</div>
                <div class="name" aria-label="Navn">@Individual.FullName</div>
                <div class="details">
                    @if (Individual.BirthDate != null)
                    {
                        <div class="date">* @Individual.BirthDate.ToString()</div>
                        @if (!string.IsNullOrEmpty(Individual.BirthPlace))
                        {
                            <div class="place">@Individual.BirthPlace.ToString()</div>
                        }
                    }
                    @if (Individual.DeathDate != null)
                    {
                        <div class="date">† @Individual.DeathDate.ToString()</div>
                        @if (!string.IsNullOrEmpty(Individual.DeathPlace))
                        {
                            <div class="place">@Individual.DeathPlace.ToString()</div>
                        }
                    }
                </div>
            </div>
        }
        else
        {
            <div class="info minimal">
                <div class="content" aria-label="Ane @Anenummer">
                    @Anenummer @Individual.FullName
                    @if (Individual.BirthDate != null)
                    {
                        <text> * @Individual.BirthDate.ToString()</text>
                    }
                    @if (Individual.DeathDate != null)
                    {
                        <text> † @Individual.DeathDate.ToString()</text>
                    }
                </div>
            </div>
        }
    }
    else
    {
        @if (ShowMinimal)
        {
            <div class="empty minimal">Ingen ane (@Anenummer)</div>
        }
        else
        {
            <div class="empty">Ingen ane (@Anenummer)</div>
        }
    }
</div>

@code {
    /// <summary>
    /// The individual to display in this cell.
    /// </summary>
    [Parameter]
    public Individual? Individual { get; set; }

    /// <summary>
    /// The Anenummer (ancestor number) according to the Kekulé von Stradonitz System.
    /// The numbering starts with 1 for the proband, 2 for the father, 3 for the mother, etc.
    /// </summary>
    [Parameter]
    public int Anenummer { get; set; }

    /// <summary>
    /// When true, displays a minimal vertical view for grandparents and great-grandparents.
    /// When false, displays a detailed horizontal view for the proband and parents.
    /// </summary>
    [Parameter]
    public bool ShowMinimal { get; set; }

    /// <summary>
    /// Optional highlight role for styling. Expected values: "proband", "parent" or null.
    /// </summary>
    [Parameter]
    public string? HighlightRole { get; set; }
}

<style>
.anetavle-cell {
    border: 1px solid #ddd;
    padding: 0.5rem;
    border-radius: 4px;
    min-height: 100px;
    background: white;
}

/* Dynamic highlight roles */
.anetavle-cell.proband { background-color: #e6f7ff; }
.anetavle-cell.parent { background-color: #f0f5ff; }

.info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.info.minimal {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    max-height: fit-content;
    writing-mode: sideways-lr;
}

.info.minimal .content {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    max-width: 250px;
    font-size: 0.9rem;
}

.anenummer {
    font-size: 0.8rem;
    color: #666;
}

.name {
    font-weight: bold;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.date {
    font-size: 0.9rem;
}

.place {
    font-size: 0.8rem;
    color: #666;
    font-style: italic;
}

.empty {
    color: #999;
    font-style: italic;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    text-align: center;
}

.empty.minimal {
    color: #999;
    font-style: italic;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    text-align: center;
    writing-mode: sideways-lr;
    max-height: fit-content;
}

.empty.minimal .content {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    max-width: 250px;
    font-size: 0.9rem;
}

/* Hover effect for cells */
.anetavle-cell:hover {
    border-color: #0078d4;
    box-shadow: 0 0 5px rgba(0, 120, 212, 0.5);
    transition: all 0.2s ease;
}
</style>
