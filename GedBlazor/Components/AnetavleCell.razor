@using GedBlazor.Models

<div class="anetavle-cell">
    @if (Individual != null)
    {
        @if (!ShowMinimal)
        {
            <div class="info">
                <div class="anenummer">@AnenNumber</div>
                <div class="name">@Individual.FullName</div>
                <div class="details">
                    @if (Individual.BirthDate != null)
                    {
                        <div class="date">*@Individual.BirthDate</div>
                        @if (!string.IsNullOrEmpty(Individual.BirthPlace))
                        {
                            <div class="place">@Individual.BirthPlace</div>
                        }
                    }
                    @if (Individual.DeathDate != null)
                    {
                        <div class="date">†@Individual.DeathDate</div>
                        @if (!string.IsNullOrEmpty(Individual.DeathPlace))
                        {
                            <div class="place">@Individual.DeathPlace</div>
                        }
                    }
                </div>
            </div>
        }
        else
        {
            <div class="info minimal">
                <div class="content">
                    @AnenNumber @Individual.FullName
                    @if (Individual.BirthDate != null)
                    {
                        <text> *@Individual.BirthDate</text>
                    }
                    @if (Individual.DeathDate != null)
                    {
                        <text> †@Individual.DeathDate</text>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="empty">No ancestor (@AnenNumber)</div>
    }
</div>

@code {
    [Parameter]
    public Individual? Individual { get; set; }

    [Parameter]
    public int AnenNumber { get; set; }

    [Parameter]
    public bool ShowMinimal { get; set; }
}

<style>
.anetavle-cell {
    border: 1px solid #ddd;
    padding: 0.5rem;
    border-radius: 4px;
    min-height: 100px;
    background: white;
}

.info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.info.minimal {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    writing-mode: sideways-lr;
}

.info.minimal .content {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    max-width: 250px;
    font-size: 0.9rem;
}

.anenummer {
    font-size: 0.8rem;
    color: #666;
}

.name {
    font-weight: bold;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.date {
    font-size: 0.9rem;
}

.place {
    font-size: 0.8rem;
    color: #666;
    font-style: italic;
}

.empty {
    color: #999;
    font-style: italic;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    text-align: center;
}
</style>
